{
  "manifest_version": 3,
  "name": "QC Workload Tracker",
  "version": "1.0",
  "description": "Tracks QC agent actions and workload progress.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "webRequest",
    "tabs"
  ],  
  "host_permissions": [
    "https://backoffice.sonosuite.com/*",
    "https://script.google.com/*",
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "qcwt_background.js"
  },

  "web_accessible_resources": [],
  "content_scripts": [
    {
      "matches": ["https://backoffice.sonosuite.com/*"],
      "js": ["qcwt_content.js"],
      "run_at": "document_start"
    }
  ]
}
